<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="30dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingTop="40dp"
            android:text="Login to Runneria"
            android:textSize="24sp"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="114dp"
            android:layout_height="84dp"
            android:layout_gravity="center"
            android:layout_marginTop="24dp"
            app:srcCompat="@drawable/pngtree_sports_icon_design_with_human_shape_running_png_image_3583517_removebg_preview" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:hint="Full Name"
            android:inputType="textPersonName" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:hint="E-mail"
            android:inputType="textEmailAddress" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:hint="Password"
            android:inputType="textPassword" />

        <Switch
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Turn on Notifications" />

        <!-- LOGIN MANUAL -->
        <Button
            android:id="@+id/btnLgn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:backgroundTint="#2B2024"
            android:onClick="btnLgn"
            android:text="Login" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="12dp"
            android:text="or" />

        <!-- GOOGLE LOGIN -->
        <Button
            android:id="@+id/btnGoogle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#A80038"
            android:onClick="loginGoogle"
            android:text="Continue with Google"
            app:icon="@drawable/google"
            app:iconPadding="8dp" />

        <!-- APPLE LOGIN (UI ONLY) -->
        <Button
            android:id="@+id/btnApple"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:backgroundTint="#A80038"
            android:text="Continue with Apple"
            app:icon="@drawable/apple_inc__logo_wine"
            app:iconPadding="-7dp"
            app:iconSize="30dp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
